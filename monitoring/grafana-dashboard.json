{
  "dashboard": {
    "id": null,
    "title": "ML Prediction API Dashboard",
    "tags": ["ml", "api", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ml_api_requests_total[5m])",
            "legendFormat": "{{endpoint}} - {{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Prediction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ml_model_predictions_total{status=\"success\"}[5m]) / rate(ml_model_predictions_total[5m])",
            "legendFormat": "{{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Prediction Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ml_model_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{model_name}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ml_model_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile - {{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Model Load Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ml_model_loaded",
            "legendFormat": "{{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ml_api_errors_total[5m])",
            "legendFormat": "{{endpoint}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Active Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "ml_api_active_requests",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Model Confidence Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(ml_model_confidence_bucket[5m])",
            "legendFormat": "{{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Retraining Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ml_model_retraining_total[5m])",
            "legendFormat": "{{model_name}} - {{trigger_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Data Drift Detection",
        "type": "stat",
        "targets": [
          {
            "expr": "ml_data_drift_detected",
            "legendFormat": "{{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Data Drift Score",
        "type": "graph",
        "targets": [
          {
            "expr": "ml_data_drift_score",
            "legendFormat": "{{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
} 